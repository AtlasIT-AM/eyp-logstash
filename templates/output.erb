output {
<% if defined?(@elasticsearchhost) -%>
 elasticsearch {
  host => "<%= @elasticsearchhost %>"
  port => "<%= @elasticsearchport %>"
  protocol => "http"
<% if defined?(@index) -%>
  index => "<%= @index %>"
<% end -%>
 }
<% end -%>
<% if defined?(@stdout_codec) -%>
 stdout { codec => <%= @stdout_codec %> }
<% end -%>
}
